            { nome: "Ne√¥nio", simbolo: "Ne", distribuicao: "1s¬≤ 2s¬≤ 2p‚Å∂", periodo: 2, grupo: 18, bloco: "p", familia: "G√°s Nobre" },
            { nome: "S√≥dio", simbolo: "Na", distribuicao: "1s¬≤ 2s¬≤ 2p‚Å∂ 3s¬π", periodo: 3, grupo: 1, bloco: "s", familia: "Metal Alcalino" },
            { nome: "Magn√©sio", simbolo: "Mg", distribuicao: "1s¬≤ 2s¬≤ 2p‚Å∂ 3s¬≤", periodo: 3, grupo: 2, bloco: "s", familia: "Metal Alcalino-Terroso" },
            { nome: "Alum√≠nio", simbolo: "Al", distribuicao: "1s¬≤ 2s¬≤ 2p‚Å∂ 3s¬≤ 3p¬π", periodo: 3, grupo: 13, bloco: "p", familia: "Metal" },
            { nome: "Sil√≠cio", simbolo: "Si", distribuicao: "1s¬≤ 2s¬≤ 2p‚Å∂ 3s¬≤ 3p¬≤", periodo: 3, grupo: 14, bloco: "p", familia: "Semimetal" },
